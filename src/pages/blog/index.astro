---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<BaseLayout title="Blog" description="Articles about software engineering, performance, and system design.">
  <section class="py-16 sm:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
      <p class="text-xl text-gray-600 mb-12">
        Articles about software engineering, performance, and system design.
      </p>

      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="border-b border-gray-200 pb-8">
            <a href={`/blog/${post.id}`} class="block group">
              <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-gray-600 transition-colors mb-2">
                {post.data.title}
              </h2>
              <p class="text-gray-500 text-sm mb-3">
                {formatDate(post.data.date)}
              </p>
              {post.data.description && (
                <p class="text-gray-600">
                  {post.data.description}
                </p>
              )}
              {post.data.tags && (
                <div class="flex gap-2 mt-3">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
