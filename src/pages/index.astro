---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import AboutSection from '../components/AboutSection.astro';
import SystemsSection from '../components/SystemsSection.astro';
import LatestPosts from '../components/LatestPosts.astro';
---

<BaseLayout title="Home">
  <!-- Gradient wrapper for all content -->
  <div class="relative bg-gradient-to-b from-white via-emerald-50/50 to-slate-50 overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-emerald-100 rounded-full opacity-30 blur-3xl"></div>
      <div class="absolute top-1/2 -left-24 w-80 h-80 bg-emerald-200 rounded-full opacity-20 blur-3xl"></div>
      <div class="absolute bottom-24 right-1/4 w-64 h-64 bg-emerald-100 rounded-full opacity-20 blur-3xl"></div>
    </div>

    <Hero />
    <AboutSection />
    <SystemsSection />
    <LatestPosts />
  </div>
</BaseLayout>
