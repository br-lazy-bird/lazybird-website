---
interface Props {
  domain: string;
  name: string;
  href?: string;
  comingSoon?: boolean;
}

const { domain, name, href, comingSoon = false } = Astro.props;
---

<div class={`bg-white rounded-lg border p-6 ${comingSoon ? 'border-dashed border-gray-300' : 'border-gray-200 hover:border-gray-300 hover:shadow-sm transition-all'}`}>
  <p class="text-sm font-medium text-gray-500 mb-2">{domain}</p>
  <h3 class="text-lg font-semibold text-gray-900 mb-4">{name}</h3>
  {comingSoon ? (
    <span class="text-gray-400 text-sm">Coming soon</span>
  ) : (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-900 font-medium hover:underline"
    >
      Try it &rarr;
    </a>
  )}
</div>
