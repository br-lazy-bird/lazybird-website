---
interface Props {
  domain: string;
  name: string;
  href?: string;
  comingSoon?: boolean;
}

const { domain, name, href, comingSoon = false } = Astro.props;
---

<div class={`bg-white rounded-lg border-l-4 border p-4 ${comingSoon ? 'border-l-slate-300 border-slate-200 border-dashed' : 'border-l-emerald-500 border-slate-200 hover:border-l-emerald-600 hover:shadow-md transition-all'}`}>
  <p class="text-xs font-semibold text-emerald-600 uppercase tracking-wide mb-1">{domain}</p>
  <h3 class="text-base font-semibold text-slate-900 mb-2">{name}</h3>
  {comingSoon ? (
    <span class="text-slate-400 text-sm">Coming soon</span>
  ) : (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center text-emerald-600 font-medium hover:text-emerald-700 transition-colors"
    >
      Try it <span class="ml-1">&rarr;</span>
    </a>
  )}
</div>
