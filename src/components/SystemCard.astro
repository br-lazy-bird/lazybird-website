---
interface Props {
  domain: string;
  name: string;
  href?: string;
  comingSoon?: boolean;
}

const { domain, name, href, comingSoon = false } = Astro.props;
---

<div class={`bg-white rounded-lg border p-4 ${comingSoon ? 'border-dashed border-slate-300' : 'border-slate-200 hover:border-blue-300 hover:shadow-sm transition-all'}`}>
  <p class="text-xs font-medium text-slate-500 mb-1">{domain}</p>
  <h3 class="text-base font-semibold text-slate-900 mb-2">{name}</h3>
  {comingSoon ? (
    <span class="text-slate-400 text-sm">Coming soon</span>
  ) : (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="text-blue-600 font-medium hover:text-blue-700 transition-colors"
    >
      Try it &rarr;
    </a>
  )}
</div>
