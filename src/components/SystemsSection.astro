---
import SystemCard from './SystemCard.astro';

const systems = [
  {
    domain: 'Data Integrity',
    name: 'Flash Sales',
    href: 'https://github.com/br-lazy-bird/data-integrity-01-flash-sales',
  },
  {
    domain: 'Database Performance',
    name: 'Employee Directory',
    href: 'https://github.com/br-lazy-bird/database-performance-01-employee-directory',
  },
  {
    domain: 'Asynchronous Patterns',
    name: 'Product Catalog',
    href: 'https://github.com/br-lazy-bird/asynchronous-patterns-01-product-catalog',
  },
];
---

<section class="relative py-8 sm:py-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-lg text-slate-600 text-center mb-8">
      To get started, pick one of the available broken systems:
    </p>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      {systems.map((system) => (
        <SystemCard
          domain={system.domain}
          name={system.name}
          href={system.href}
        />
      ))}
      <a
        href="/systems"
        class="flex flex-col items-center justify-center bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-lg border-2 border-dashed border-emerald-300 p-4 hover:border-emerald-500 hover:from-emerald-100 hover:to-emerald-200 transition-all group"
      >
        <div class="w-10 h-10 rounded-full bg-emerald-600 flex items-center justify-center mb-2 group-hover:bg-emerald-700 transition-colors shadow-md">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
        <span class="text-emerald-700 font-semibold text-sm">Explore All</span>
        <span class="text-xs text-emerald-600 mt-1">5 systems</span>
      </a>
    </div>
  </div>
</section>
