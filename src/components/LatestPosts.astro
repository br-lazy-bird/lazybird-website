---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const latestPosts = posts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<section class="relative py-12 sm:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-slate-900 text-center mb-12">
      Latest from the Blog
    </h2>
    <div class="space-y-4 max-w-2xl mx-auto">
      {latestPosts.map((post) => (
        <a
          href={`/blog/${post.id}`}
          class="flex justify-between items-center p-4 bg-slate-50 rounded-lg hover:bg-slate-100 transition-colors"
        >
          <span class="font-medium text-slate-900">{post.data.title}</span>
          <span class="text-sm text-slate-500">{formatDate(post.data.date)}</span>
        </a>
      ))}
    </div>
    <div class="text-center mt-8">
      <a href="/blog" class="text-blue-600 hover:text-blue-700 font-medium transition-colors">
        View all posts &rarr;
      </a>
    </div>
  </div>
</section>
